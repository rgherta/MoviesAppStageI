<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.moviesappstagei.moviesappstagei">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-sdk android:minSdkVersion="5.0"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.github.moviesappstagei.moviesappstagei.MovieGallery"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.github.moviesappstagei.moviesappstagei.DetailsActivity"
            android:parentActivityName="com.github.moviesappstagei.moviesappstagei.MovieGallery"
            android:label="@string/details_activity_name">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.moviesappstagei.moviesappstagei.MovieGallery" />
        </activity>


    </application>

</manifest>